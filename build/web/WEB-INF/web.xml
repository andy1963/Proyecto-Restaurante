<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorIMG</servlet-name>
        <servlet-class>com.controlador.ControladorIMG</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>com.controlador.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListaCategoria</servlet-name>
        <servlet-class>com.controlador.ServletListaCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListaClientes</servlet-name>
        <servlet-class>com.controlador.ServletListaClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListaMenu</servlet-name>
        <servlet-class>com.controlador.ServletListaMenu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>com.controlador.Controlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorIMG</servlet-name>
        <url-pattern>/ControladorIMG</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListaCategoria</servlet-name>
        <url-pattern>/ServletListaCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListaClientes</servlet-name>
        <url-pattern>/ServletListaClientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListaMenu</servlet-name>
        <url-pattern>/ServletListaMenu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
